extends ../layout

block content
	.row.donate-form
		.col-md-6.col-md-offset-3
			.panel.panel-default
				.panel-body
					.card-wrapper

					form.donate-form.form-horizontal(action="/campaign/#{campaign.id}/donate", method="post")
						.form-group
							label.col-lg-2.control-label(for='credit_card') Credit Card
							.col-lg-10
								input#credit_card.form-control(type='text', placeholder='5500 0000 0000 0004', name='number')
						.form-group
							label.col-lg-2.control-label(for='credit_card') Name
							.col-lg-5
								input#first_name.form-control(type='text', placeholder='First Name', name="first-name")
							.col-lg-5
								input#last_name.form-control(type='text', placeholder='Last Name', name="last-name")
						.form-group
							label.col-lg-2.control-label(for='exp-date') EXP / CVC
							.col-sm-5
								input#exp-date.form-control(type='text', placeholder='10/2015', name='expiry')
							.col-sm-5
								input#cvc-number.form-control(type='text', placeholder='123', name='cvc')
						.form-group
							label.col-lg-2.control-label(for='amount', name='amount') Amount
							.col-lg-10
								input#amount.form-control(type='text', placeholder='$ 100')
						
						.form-group
							.col-lg-10.col-lg-offset-2
								button.btn.btn-primary.btn-block.upcase(type='submit') Donate Now
